.headerlefts
  .headerleft
    .headerleft__name
      = current_user.name
    .headerleft__lists
      .lists
        = link_to new_group_path do
          = icon('fas', 'pen-square', class: 'icon1')
      .lists
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon2')

.contentslefts
  - current_user.groups.each do |group|
    .contentsleft
      = link_to group_messages_path(group) do
        .contentsleft__name
          = group.name
        .contentsleft__message
          = group.show_last_message


